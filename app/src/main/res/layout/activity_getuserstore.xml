<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".getuserstoreActivity">

    <EditText
        android:id="@+id/username"
        android:layout_width="302dp"
        android:layout_height="56dp"
        android:layout_marginTop="204dp"
        android:ems="10"
        android:inputType="text"
        android:hint="username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/storename"
        android:layout_width="298dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="text"
        android:hint="storename"
        app:layout_constraintEnd_toEndOf="@+id/username"
        app:layout_constraintStart_toStartOf="@+id/username"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <EditText
        android:id="@+id/dis"
        android:layout_width="297dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Discription"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/storename"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/storename"
        app:layout_constraintTop_toBottomOf="@+id/storename" />

    <Button
        android:id="@+id/next"
        android:layout_width="221dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="@+id/dis"
        app:layout_constraintStart_toStartOf="@+id/dis"
        app:layout_constraintTop_toBottomOf="@+id/dis" />
</androidx.constraintlayout.widget.ConstraintLayout>