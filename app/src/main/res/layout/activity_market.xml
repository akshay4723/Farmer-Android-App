<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarketActivity">

    <EditText
        android:id="@+id/updateproductname"
        android:layout_width="294dp"
        android:layout_height="54dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="Product name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updateproductdisc"
        android:layout_width="294dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Product Disc"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/updateproductname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/updateproductname"
        app:layout_constraintTop_toBottomOf="@+id/updateproductname" />

    <Button
        android:id="@+id/productupdatebutton"
        android:layout_width="247dp"
        android:layout_height="58dp"
        android:layout_marginTop="52dp"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="@+id/updateproductdisc"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/updateproductdisc"
        app:layout_constraintTop_toBottomOf="@+id/updateproductdisc" />
</androidx.constraintlayout.widget.ConstraintLayout>