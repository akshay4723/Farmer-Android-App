<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"
    android:padding="30dp"
    android:gravity="left"
    android:background="#0055FF">


    <TextView
        android:id="@+id/buyproname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Products"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/buyprodisc"
        android:layout_width="257dp"
        android:layout_height="32dp"
        android:layout_below="@+id/buyproname"
        android:layout_alignStart="@+id/buyproname"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="21dp"
        android:text="Product Disc"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/catphonenumber"
        android:layout_width="119dp"
        android:layout_height="27dp"
        android:layout_below="@+id/buyprodisc"
        android:layout_alignStart="@+id/buyprodisc"
        android:layout_alignEnd="@+id/buyprodisc"
        android:layout_marginStart="1dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="137dp"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/cartstorename"
        android:layout_width="119dp"
        android:layout_height="27dp"
        android:layout_below="@+id/buyprodisc"
        android:layout_alignStart="@+id/buyprodisc"
        android:layout_alignEnd="@+id/buyprodisc"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="140dp"
        android:text="Storename"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/cartemail"
        android:layout_width="273dp"
        android:layout_height="27dp"
        android:layout_below="@+id/buyprodisc"
        android:layout_alignStart="@+id/buyprodisc"
        android:layout_alignEnd="@+id/buyprodisc"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="-15dp"
        android:text="email"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />


</RelativeLayout>